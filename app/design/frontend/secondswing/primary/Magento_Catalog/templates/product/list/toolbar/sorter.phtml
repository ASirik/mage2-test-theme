        <option value="create_asc" <?php if($sortBy == "create_asc") echo "selected=selected" ;?>>Oldest Released</option>
        <option value="price_desc" <?php if($sortBy == "price_desc") echo "selected=selected" ;?>>Highest Price</option>
        <option value="price_asc" <?php if($sortBy == "price_asc") echo "selected=selected" ;?>>Lowest Price</option>
    </select>
</div>
