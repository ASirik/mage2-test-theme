<script>
require(['jquery'], function($) {
    var searchLabel = $('#search_mini_form .label');

    searchLabel.on('click', function(event) {
        event.preventDefault();
        searchLabel.toggleClass('active');
    });


    $(document).on("click", ".action.close-menu", function () {
        if ($('html').hasClass('nav-open')) {
            $('html').removeClass('nav-open');
            setTimeout(function () {
                $('html').removeClass('nav-before-open');
            }, 300);
        } else {
            $('html').addClass('nav-before-open');
            setTimeout(function () {
                $('html').addClass('nav-open');
            }, 42);
        }
    });

    $(".section-items").append('<span data-action="toggle-nav" class="action close-menu"><span>Close</span></span>');

});
</script>
